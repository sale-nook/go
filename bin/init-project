#!/usr/bin/env zsh

. "$(pwd)/bin/import"

if [ "$APP_NAME" = "" ]; then
  echo "APP_NAME is not set"
  return 1
fi

import "async-await"

await find ./ -type f -exec sed -i "s/$GITHUB_USERNAME\/aws-appsync-go/$GITHUB_USERNAME\/$APP_NAME/g" {} \;
await find ./ -type f -exec sed -i "s/aws-appsync-go/$APP_NAME/g" {} \;
